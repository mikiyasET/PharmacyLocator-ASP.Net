
@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    string layout = null;
    if (controller == "Admin")
    {
        layout = "_AdminLayout";
    } else if (controller == "Pharmacy") {
        layout = "_PharmacyLayout";
    } 
    else if (controller == "User")
    {
        layout = "_UserLayout";
    }
    else
    {
        layout = "_Layout";
    }
    Layout = layout;
}
