@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pharmacy Locator</title>
    <link href="//cdn.jsdelivr.net/npm/sweetalert2/theme-dark@4/dark.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" asp-append-version="true" rel="stylesheet" />
</head>
<body>

    <div class="body">
        <div class="content">
            <div id="login-box" style="height: 35rem !important;">
                <form asp-controller="account" asp-action="SignUp" method="post">
                    <h2 class="text-center">Sign Up</h2>
                    <p class="text-center">
                        @ViewBag.errorMessage
                    </p>
                    <div class="mb-3">
                        <label for="nameInput" class="form-label">Full Name</label>
                        <input type="text" name="name" class="form-control" id="nameInput" tabindex="1" value="@ViewBag.name">
                    </div>
                    <div class="mb-3">
                        <label for="usernameInput" class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" id="usernameInput" tabindex="2" value="@ViewBag.username">
                    </div>
                    <div class="mb-3">
                        <label for="passwordInput" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="passwordInput" tabindex="3">
                    </div>
                    <div class="mb-3">
                        <label for="cpasswordInput" class="form-label">Confirm Password</label>
                        <input type="password" name="cpassword" class="form-control" id="cpasswordInput" tabindex="4">
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn ca-btn mt-3" type="submit" name="signup">Signup</button>
                    </div>
                    <div class="mb-3 mt-2 text-center text-muted">
                        Already have an account @Html.ActionLink("Login","","user",null,new { @class = "newLink" })
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>