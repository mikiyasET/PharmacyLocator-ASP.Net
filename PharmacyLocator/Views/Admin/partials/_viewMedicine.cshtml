@using PharmacyLocator.Models.Services
@model IEnumerable<PharmacyLocator.Models.Medicine>
@inject IAdminService adminservice
<div id="main-content">
    <div class="mt-5">
        @if (Model.Count() > 0)
        {
            <table id="pharmacyTable" class="table table-borderless table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Added By</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var medicine in Model)
                    {
                        var adminName = (await adminservice.GetByIdAsync(medicine.AddBy)).Name;

                    <td>@counter++;</td>
                    <td>@medicine.Name</td>
                    <td>@medicine.Description.Substring(0,30)</td>
                    <td>@adminName</td>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h2 class="text-center">No medicine found.</h2>
        }
    </div>
</div>